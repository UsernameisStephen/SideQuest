<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="/css/homepage.css">
</head>
<body>
    
{{> header }}
<main>
<div class="md:container md:mx-auto">
<div class="grid lg:grid-cols-3 md:grid-cols-2 min:grid-cols-1 items-center -mx-4">
{{#each games as |games| }}
    <div class="flex justify-center">
      <div id="posts" class="block p-6 rounded-lg shadow-lg bg-white max-w-sm w-full">
        <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">{{games.title}}</h5>
        <p class="text-gray-700 text-base mb-4"> {{ games.genre }} </p>
        <p class="text-gray-700 text-base mb-4"> {{ games.platform }}</p>
    
     
       
        
        <a href="/game/{{games.id}}">
        <button id="morebutton" data-id="{{ games.id }}"type="button" class=" inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">More</button>
        </a>
      </div>
    </div>
{{/each}}
</div>
</div>
</main>
   </body>
